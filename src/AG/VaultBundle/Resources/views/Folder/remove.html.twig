{% extends 'AGVaultBundle::layout.html.twig' %}

{% block breadcrumbs %}
	{{ parent() }}
	{{ render(controller('AGVaultBundle:Folder:getParents', { id:folder.id })) }}
	<li><a href="{{ path('ag_vault_folder_show', { id:folder.id, slug:folder.slug}) }}">{{ folder.name }}</a></li>
	<li class="active">Supprimer un dossier</li>
{% endblock %}

{% block ag_vault_content %}
	<div class="row">
		<div class="col-sm-1 text-center hidden-xs" style="padding-top: 22px;">
			<a href="{{ folder is null ? path('ag_vault_homepage') : path('ag_vault_folder_show', { id:folder.id, slug:folder.slug }) }}">
				{{ fa('reply fa-2x') }}
			</a>
		</div>
		<div class="col-sm-11">
			<h2>{{ fa('trash') }} Supprimer un dossier <small>{{ folder.name }}</small> ?</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<p>Êtes-vous certain de vouloir supprimer le dossier <em>{{ folder.name }}</em> ?</p>
			<p>Ce dossier contient pas moins de {{ folder.children|length }} dossier(s) et {{ folder.files|length }} fichier(s) !</p>
			<a class="btn btn-default" href="{{ folder.parent is null ? path('ag_vault_homepage') : path('ag_vault_folder_show', { id:folder.parent.id, slug:folder.parent.slug }) }}">
				{{ fa('arrow-left') }} Retour
			</a>
			<hr/>
			<form action="" method="POST">
				<label for="delete">
					<input type="radio" id="delete" name="keepordelete" value="delete" checked/> Supprimer également tout le contenu de ce dossier (par défaut).
				</label>
				<br/>
				<label for="keep">
					<input type="radio" id="keep" name="keepordelete" value="keep"/> Garder les fichiers et dossiers (vous pourrez les trouver à la racine).
				</label>
				<br/>
				<button class="btn btn-danger" type="submit" onclick="return confirm('Êtes-vous certain de vouloir supprimer ce dossier ?');">
					{{ fa('trash') }} Supprimer ce dossier
				</button>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
{% endblock %}