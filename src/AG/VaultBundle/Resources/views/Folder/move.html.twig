{% extends 'AGVaultBundle::layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumbs %}
	{{ parent() }}
	{{ render(controller('AGVaultBundle:Folder:getParents', { id:folder.id })) }}
	<li class="active">Déplacer</li>
{% endblock %}

{% block ag_vault_content %}
	<div class="row">
		<div class="col-sm-1 text-center hidden-xs" style="padding-top: 22px;">
			<a href="{{ folder.parent is null ? path('ag_vault_homepage') : path('ag_vault_folder_show', { id:folder.parent.id, slug:folder.parent.slug }) }}">
				{{ fa('reply fa-2x') }}
			</a>
		</div>
		<div class="col-sm-11">
			<h2>{{ fa('arrows') }} Déplacer un dossier <small>{{ folder.name }}</small></h2>
		</div>
	</div>
	<hr/>
	<div class="row" style="margin-bottom: 70px;">
		<div class="col-md-7 center-block nfloat">
			{{ form(form) }}
		</div>
	</div>
{% endblock %}