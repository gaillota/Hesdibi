{% extends 'AGVaultBundle::layout.html.twig' %}

{% block breadcrumbs %}
	{{ parent() }}
	{{ render(controller('AGVaultBundle:Folder:getParents', { id:file.folder.id })) }}
	<li><a href="{{ path('ag_vault_folder_show', { id:file.folder.id, slug:file.folder.slug}) }}">{{ file.folder.name }}</a></li>
	<li class="active">Supprimer un fichier</li>
{% endblock %}

{% block ag_vault_content %}
	<div class="row">
		<div class="col-sm-1 text-center hidden-xs" style="padding-top: 22px;">
			<a href="{{ file.folder is null ? path('ag_vault_homepage') : path('ag_vault_folder_show', { id:file.folder.id, slug:file.folder.slug }) }}">
				{{ fa('reply fa-2x') }}
			</a>
		</div>
		<div class="col-sm-11">
			<h2>{{ fa('trash') }} Supprimer un fichier <small>{{ file.name }}</small> ?</h2>
		</div>
	</div>
	<hr/>
	<div class="row">
		<div class="col-md-12 text-center">
			<form action="" method="POST">
				<a class="btn btn-default" href="{{ file.folder is null ? path('ag_vault_homepage') : path('ag_vault_folder_show', { id:file.folder.id, slug:file.folder.slug }) }}">
					{{ fa('arrow-left') }} Retour
				</a>
				<button class="btn btn-danger" type="submit">
					{{ fa('trash') }} Supprimer ce fichier
				</button>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
{% endblock %}