{% extends 'AGVaultBundle::layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumbs %}
	{{ parent() }}
	{% if folder is not null %}
		{% for parent in listParents %}
			<li><a href="{{ path('ag_vault_folder_show', { id:parent.id }) }}">{{ parent.name }}</a></li>
		{% endfor %}
		<li><a href="{{ path('ag_vault_folder_show', { id:folder.id }) }}">{{ folder.name }}</a></li>
	{% endif %}
	<li class="active">Upload</li>
{% endblock %}

{% block ag_vault_content %}
	<div class="row">
		<div class="col-md-12">
			<h2>Upload d'un fichier <small>{% if folder is not null %}{{ folder.name }}{% else %}Vault{% endif %}</small></h2>
			<hr/>
			{{ form(form) }}
		</div>
	</div>
{% endblock %}

